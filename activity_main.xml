<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/hotel_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="0dp"
        android:src="@drawable/hotel"
        android:contentDescription="@string/hilton_hotel" />
    <TextView
        android:id="@+id/hilton_hotel_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotel_img"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"
        android:text="@string/hilton_hotel_text" />
    <ImageView
        android:id="@+id/location"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/hilton_hotel_textView"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/location"
        android:contentDescription="@string/hilton_hotel_location" />


    <TextView
        android:id="@+id/hilton_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/location"
        android:layout_below="@+id/hilton_hotel_textView"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/background_dark"
        android:text="@string/hilton_address"
        android:layout_toEndOf="@id/location"
        android:layout_marginStart="10dp" />
      <ImageView
          android:id="@+id/contact_image"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_below="@+id/location"
          android:src="@drawable/phone"
          android:scaleType="centerCrop"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="10dp"
          android:layout_marginStart="10dp"
          android:contentDescription="@string/contact_us" />
    <TextView
        android:id="@+id/hilton_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_image"
        android:layout_below="@+id/hilton_address"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/background_dark"
        android:text="@string/contact_phone"
        android:layout_toEndOf="@id/contact_image"
        android:layout_marginStart="10dp" />

       <TextView
           android:id="@+id/about_us"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="10dp"
           android:layout_below="@+id/contact_image"
           android:text="@string/about_us"
           android:textAppearance="?android:textAppearanceLarge"
           android:textColor="@color/black"
           android:layout_marginStart="10dp" />
       <TextView
           android:id="@+id/description"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="10dp"
           android:layout_below="@id/about_us"
           android:textAppearance="?android:textAppearanceSmall"
           android:textColor="@color/black"
           android:text="@string/hilton_description"
           android:layout_marginStart="10dp" />
    <Button
        android:id="@+id/moreBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="@string/contact_us"/>
</RelativeLayout>












